{  
    "env": {
        "LWIPIncPath": [
            "${workspaceFolder}/lwip/**"   
        ],
        "FREERTOSIncPath": [
            "${workspaceFolder}/FreeRTOS/Source/**" 
        ],
        "CoreIncPath": [
            "${workspaceFolder}/Core/Inc"
        ]
    },

    "configurations": [
        {
            "name": "STM32",
            "compilerPath": "arm-none-eabi-gcc",
            "includePath": [
                "${FREERTOSIncPath}",
                "${LWIPIncPath}",
                "${CoreIncPath}",
                "${workspaceRoot}/**"
            ],
            "cStandard": "c11",
            "cppStandard": "c++17",
            "intelliSenseMode": "linux-gcc-x64",
            "browse": {
                "limitSymbolsToIncludedHeaders": false
            },
            "defines": [
                "STM32F407xx",
                "USE_HAL_DRIVER",
                "USE_FULL_LL_DRIVER",
                "_RTE_",
                "DEBUG_MODE" ,
                "USE_FULL_ASSERT"
            ]
        }
    ],
    "version": 4
}